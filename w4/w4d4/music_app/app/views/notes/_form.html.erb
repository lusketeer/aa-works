<% action = "new" %>
<% form_action = "/notes" %>
<% button_name = "Create note" %>

<form action="<%= form_action %>" method="post" class="form form-horizontal">
  <%= authenticity_input(form_authenticity_token) %>
  <%= method_override(action) %>

  <input type="hidden" name="note[track_id]" value="<%= track_id %>">

  <div class="form-group col-md-7">
    <label for="note_track_note" class="col-md-3 control-label">Note</label>
    <div class="col-md-4">
      <textarea name="note[track_note]" id="note_track_note" class="form-control" rows="4"></textarea>
    </div>
  </div>

  <div class="form-group col-md-7">
    <div class="col-md-4 col-md-offset-3">
      <input type="submit" value="<%= button_name %>" class="btn btn-default">
    </div>
  </div>

</form>
