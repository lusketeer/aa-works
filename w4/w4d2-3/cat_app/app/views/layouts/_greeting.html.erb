<% if current_user.nil? %>
  <form action="/session" method="post" class="form-inline">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <div class="form-group">
      <label class="sr-only" for="session_user_name">Email address</label>
      <input type="text" name='session[user_name]' class="form-control" id="session_user_name" placeholder="Username">
    </div>
    <div class="form-group">
      <label class="sr-only" for="session_password">Password</label>
      <input type="password" name='session[password]' class="form-control" id="session_password" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-default">Log in</button>
    <%= link_to "Sign Up", new_user_url%>
  </form>
<% else %>
  <div class="welcome">
      Welcome <%= current_user.user_name %>! 
      <%= button_to "Log Out", session_url, class: "btn btn-default",  method: :delete %>
  </div>
<% end %>
