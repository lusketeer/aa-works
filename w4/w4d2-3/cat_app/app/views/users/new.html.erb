<h1>Sign Up</h1>

<form action='/users' method='post' class="form form-horizontal col-md-8" >
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <div class="form-group">
    <label for="user_user_name" class="form-label col-md-2">Username</label>
    <div class="col-md-6">
      <input type='text' name='user[user_name]' id="user_user_name" class="form-control">
    </div>
  </div>

  <div class="form-group">
    <label for="user_password" class="form-label col-md-2">Password</label>
    <div class="col-md-6">
      <input type='password' name='user[password]' class="form-control" id="user_password" >
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-6 col-md-offset-2">
      <input type='submit' value='Sign Up' class="btn btn-default" >
    </div>
  </div>
</form>
