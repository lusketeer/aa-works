<form>
  <ul class="errors">
  </ul>
  <div class="form-group">
    <label>
      Title
        <input class="form-control" type="text" name="title" value="<%= post.escape("title") %>">
    </label>
  </div>
  <div class="form-group">
    <label>
      Body
      <textarea class="form-control" cols="100" rows="10" name="body"><%= post.escape("body") %></textarea>
    </label>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>

